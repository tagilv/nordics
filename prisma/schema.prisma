generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expression {
  id            String   @id @default(uuid())
  date          String
  country       String
  expression    String
  pronunciation String
  meaning       String
  translation   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([date, country])
  @@index([country])
  @@index([date])
}

model CountryInfo {
  id          String @id @default(cuid())
  country     String @unique
  funFacts    String[]
  learningTime String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}